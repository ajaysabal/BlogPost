<%- include('partials/header') %>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<div class="navbar">
    <a  href="/home">Home</a>
    <a  href="/article/new">NEW ARTICLE</a>
    <a  href="/profile/User">Profile</a>
    <div class="search-container">
        <form action="/search" method="post">
            <input  type="text" name="keyi" placeholder="Search...." required>
            <button  type="submit">search</button>
        </form>
    </div>
</div>


    <div class="container2">
      
        <div class="heading2">
            <h1>blogWB POST</h1>
            
        </div>
        <div class="blog">
            <% article.forEach(element=> { %>
                <div class="blog_post">
                    <h1>
                        <%= element.title %>
                    </h1>
                    <p>
                        <%=element.des.substring(0,80).concat('...') %>
                    </p>
                        <h5><i>CreatedBy:<%=element.createdname %> on <%= element.createdAt.toLocaleDateString()%> </i></h5>
                    <h3>
                        <%=element.likcnt %>
                    </h3>
                    <div class="buttons">
                        <form action="/like/<%=element.id%>" method="post">
                            <button class="like-btn" type="submit">like</button>
                        </form>

                        <a class="btn btn_succcess" href="/articleview/<%=element.slug %>">View More</a>

                        <a class="btn btn_info" href="/article/edit/<%=element.id %>">Edit</a>

                        <a class="btn btn_danger" href="/article/delete/<%=element.id %>">Delete</a>
                    </div>
                </div>

                <% }); %>
        </div>
    </div>
    <%- include('partials/footer') %>
    